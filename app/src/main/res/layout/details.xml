<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/space_img" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_output"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/name_output"
                style="@style/details_title" />

            <View
                style="@style/horizontal_bar"/>

            <TextView
                android:id="@+id/info_text_1"
                style="@style/details_info" />

            <TextView
                android:id="@+id/title2"
                style="@style/details_title" />

            <TextView
                android:id="@+id/info_text_3"
                style="@style/details_info" />

            <TextView
                android:id="@+id/title4"
                style="@style/details_title" />

            <TextView
                android:id="@+id/info_text_5"
                style="@style/details_info" />

            <TextView
                android:id="@+id/title6"
                style="@style/details_title" />

            <TextView
                android:id="@+id/info_text_7"
                style="@style/details_info" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/website"
                android:textColor="@android:color/white"
                android:padding="16dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>